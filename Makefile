# Makefile –¥–ª—è —É–¥–æ–±–Ω–æ–≥–æ –∑–∞–ø—É—Å–∫–∞ –∫–æ–º–∞–Ω–¥ –ò–ò-–±–æ—Ç–∞
# –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: make [–∫–æ–º–∞–Ω–¥–∞]

.PHONY: help setup test clean lint format check dev prod

# –¶–≤–µ—Ç–∞ –¥–ª—è –≤—ã–≤–æ–¥–∞
BLUE := \033[0;34m
GREEN := \033[0;32m
YELLOW := \033[1;33m
RED := \033[0;31m
NC := \033[0m

# –§—É–Ω–∫—Ü–∏—è –≤—ã–≤–æ–¥–∞
define log
	@echo "$(BLUE)[MAKE]$(NC) $(1)"
endef

define success
	@echo "$(GREEN)‚úÖ$(NC) $(1)"
endef

# –ü–æ —É–º–æ–ª—á–∞–Ω–∏—é –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–ø—Ä–∞–≤–∫—É
help: ## –ü–æ–∫–∞–∑–∞—Ç—å —Å–ø—Ä–∞–≤–∫—É
	@echo "$(BLUE)ü§ñ –ò–ò-–±–æ—Ç - –ö–æ–º–∞–Ω–¥—ã —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏$(NC)"
	@echo ""
	@echo "$(GREEN)–õ–æ–∫–∞–ª—å–Ω–∞—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞:$(NC)"
	@echo "  setup      - –ù–∞—Å—Ç—Ä–æ–∏—Ç—å –≤—Å–µ —Å—Ä–µ–¥—ã"
	@echo "  dev        - –ó–∞–ø—É—Å—Ç–∏—Ç—å dev —Å—Ä–µ–¥—É"
	@echo "  test-local - –ó–∞–ø—É—Å—Ç–∏—Ç—å –ª–æ–∫–∞–ª—å–Ω—ã–µ —Ç–µ—Å—Ç—ã"
	@echo "  clean      - –û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ"
	@echo ""
	@echo "$(GREEN)–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ:$(NC)"
	@echo "  test       - –í—Å–µ —Ç–µ—Å—Ç—ã"
	@echo "  test-unit  - Unit —Ç–µ—Å—Ç—ã"
	@echo "  test-int   - –ò–Ω—Ç–µ–≥—Ä–∞—Ü–∏–æ–Ω–Ω—ã–µ —Ç–µ—Å—Ç—ã"
	@echo "  test-e2e   - E2E —Ç–µ—Å—Ç—ã"
	@echo "  coverage   - –ü–æ–∫—Ä—ã—Ç–∏–µ –∫–æ–¥–∞"
	@echo ""
	@echo "$(GREEN)–ö–∞—á–µ—Å—Ç–≤–æ –∫–æ–¥–∞:$(NC)"
	@echo "  lint       - –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–¥–∞"
	@echo "  format     - –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ"
	@echo "  check      - –ü–æ–ª–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞"
	@echo ""
	@echo "$(GREEN)Production:$(NC)"
	@echo "  prod-test  - –¢–µ—Å—Ç—ã –Ω–∞ production"
	@echo "  deploy     - –î–µ–ø–ª–æ–π —Å —Ç–µ—Å—Ç–∞–º–∏"
	@echo ""

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –≤—Å–µ—Ö —Å—Ä–µ–¥
setup: ## –ù–∞—Å—Ç—Ä–æ–∏—Ç—å dev –∏ test —Å—Ä–µ–¥—ã
	$(call log,"üîß –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —Å—Ä–µ–¥ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏...")
	@./scripts/test_local.sh setup
	$(call success,"–°—Ä–µ–¥—ã –Ω–∞—Å—Ç—Ä–æ–µ–Ω—ã")

# –õ–æ–∫–∞–ª—å–Ω–∞—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞
dev: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å dev —Å—Ä–µ–¥—É
	$(call log,"üöÄ –ó–∞–ø—É—Å–∫ dev —Å—Ä–µ–¥—ã...")
	@docker compose up -d
	$(call success,"Dev —Å—Ä–µ–¥–∞ –∑–∞–ø—É—â–µ–Ω–∞: http://localhost:8000")

test-local: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å –ª–æ–∫–∞–ª—å–Ω—É—é —Ç–µ—Å—Ç–æ–≤—É—é —Å—Ä–µ–¥—É
	$(call log,"üß™ –ó–∞–ø—É—Å–∫ –ª–æ–∫–∞–ª—å–Ω–æ–π —Ç–µ—Å—Ç–æ–≤–æ–π —Å—Ä–µ–¥—ã...")
	@./scripts/test_local.sh start
	$(call success,"–¢–µ—Å—Ç–æ–≤–∞—è —Å—Ä–µ–¥–∞ –∑–∞–ø—É—â–µ–Ω–∞: http://localhost:8001")

# –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
test: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å –≤—Å–µ —Ç–µ—Å—Ç—ã –ª–æ–∫–∞–ª—å–Ω–æ
	$(call log,"üß™ –ó–∞–ø—É—Å–∫ –≤—Å–µ—Ö —Ç–µ—Å—Ç–æ–≤...")
	@./scripts/test_local.sh test

test-unit: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å unit —Ç–µ—Å—Ç—ã
	$(call log,"‚ö° –ó–∞–ø—É—Å–∫ unit —Ç–µ—Å—Ç–æ–≤...")
	@./scripts/test_local.sh test-unit

test-int: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–æ–Ω–Ω—ã–µ —Ç–µ—Å—Ç—ã
	$(call log,"üîó –ó–∞–ø—É—Å–∫ –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Ç–µ—Å—Ç–æ–≤...")
	@./scripts/test_local.sh test-int

test-e2e: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å E2E —Ç–µ—Å—Ç—ã
	$(call log,"üéØ –ó–∞–ø—É—Å–∫ E2E —Ç–µ—Å—Ç–æ–≤...")
	@./scripts/test_local.sh test-e2e

coverage: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–µ—Å—Ç—ã —Å –ø–æ–∫—Ä—ã—Ç–∏–µ–º
	$(call log,"üìä –ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤ —Å –ø–æ–∫—Ä—ã—Ç–∏–µ–º...")
	@./scripts/test_local.sh coverage
	$(call success,"–û—Ç—á–µ—Ç: htmlcov/index.html")

# –ö–∞—á–µ—Å—Ç–≤–æ –∫–æ–¥–∞
lint: ## –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –∫–∞—á–µ—Å—Ç–≤–æ –∫–æ–¥–∞
	$(call log,"üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–∞—á–µ—Å—Ç–≤–∞ –∫–æ–¥–∞...")
	@./scripts/test_local.sh lint

format: ## –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞—Ç—å –∫–æ–¥
	$(call log,"‚ú® –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–æ–¥–∞...")
	@./scripts/test_local.sh format

check: ## –ü–æ–ª–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ (lint + –±—ã—Å—Ç—Ä—ã–µ —Ç–µ—Å—Ç—ã)
	$(call log,"üîé –ü–æ–ª–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–¥–∞...")
	@./scripts/test_local.sh check

# Production
prod-test: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–µ—Å—Ç—ã –Ω–∞ production —Å–µ—Ä–≤–µ—Ä–µ
	$(call log,"üåê –ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤ –Ω–∞ production...")
	@ssh root@5.129.224.104 "bot test-fast"

deploy: ## –î–µ–ø–ª–æ–π —Å –ø–æ–ª–Ω—ã–º —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ–º
	$(call log,"üöÄ –î–µ–ø–ª–æ–π —Å —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ–º...")
	@./scripts/test_and_deploy.sh

# –û—á–∏—Å—Ç–∫–∞
clean: ## –û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ —Å—Ä–µ–¥—ã –∏ –¥–∞–Ω–Ω—ã–µ
	$(call log,"üßπ –û—á–∏—Å—Ç–∫–∞...")
	@docker compose down -v --remove-orphans || true
	@./scripts/test_local.sh clean
	@docker system prune -f
	$(call success,"–û—á–∏—Å—Ç–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞")

# –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã
logs: ## –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ dev —Å—Ä–µ–¥—ã
	@docker compose logs -f

test-logs: ## –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ —Ç–µ—Å—Ç–æ–≤–æ–π —Å—Ä–µ–¥—ã
	@./scripts/test_local.sh logs

status: ## –°—Ç–∞—Ç—É—Å –≤—Å–µ—Ö —Å—Ä–µ–¥
	$(call log,"üìä –°—Ç–∞—Ç—É—Å dev —Å—Ä–µ–¥—ã:")
	@docker compose ps || echo "Dev —Å—Ä–µ–¥–∞ –Ω–µ –∑–∞–ø—É—â–µ–Ω–∞"
	@echo ""
	$(call log,"üìä –°—Ç–∞—Ç—É—Å —Ç–µ—Å—Ç–æ–≤–æ–π —Å—Ä–µ–¥—ã:")
	@./scripts/test_local.sh status

shell: ## –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–∞—è –æ–±–æ–ª–æ—á–∫–∞ –≤ —Ç–µ—Å—Ç–æ–≤–æ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–µ
	@./scripts/test_local.sh shell

# –ë—ã—Å—Ç—Ä—ã–µ –∫–æ–º–∞–Ω–¥—ã –¥–ª—è –µ–∂–µ–¥–Ω–µ–≤–Ω–æ–π —Ä–∞–±–æ—Ç—ã
quick-test: lint test-unit ## –ë—ã—Å—Ç—Ä–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –ø–µ—Ä–µ–¥ –∫–æ–º–º–∏—Ç–æ–º
	$(call success,"–ë—ã—Å—Ç—Ä–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞")

full-test: lint test ## –ü–æ–ª–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –ø–µ—Ä–µ–¥ –ø—É—à–µ–º
	$(call success,"–ü–æ–ª–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞")

# –ö–æ–º–∞–Ω–¥—ã —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏
watch: ## –¢–µ—Å—Ç—ã –≤ —Ä–µ–∂–∏–º–µ –Ω–∞–±–ª—é–¥–µ–Ω–∏—è
	@./scripts/test_local.sh test-watch

db: ## –ü–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è –∫ —Ç–µ—Å—Ç–æ–≤–æ–π –ë–î
	@./scripts/test_local.sh db-shell
