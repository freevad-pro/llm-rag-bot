# Basic settings
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/catalog_db
BOT_TOKEN=your_telegram_bot_token_here

# LLM providers
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# AI Model settings
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_AVAILABLE_MODELS=gpt-4o-mini,gpt-4o
YANDEX_DEFAULT_MODEL=yandexgpt-lite
YANDEX_AVAILABLE_MODELS=yandexgpt-lite,yandexgpt

# Embeddings
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Search settings
SEARCH_MIN_SCORE=0.45
SEARCH_NAME_BOOST=0.2
SEARCH_ARTICLE_BOOST=0.3
SEARCH_MAX_RESULTS=10

# Notifications
MANAGER_TELEGRAM_CHAT_ID=your_manager_chat_id
ADMIN_TELEGRAM_IDS=your_admin_telegram_ids

# Paths
CHROMA_PERSIST_DIR=/app/data/chroma
UPLOAD_DIR=/app/data/uploads

# Application URL (для ссылок в email)
BASE_URL=http://127.0.0.1:8000

# SMTP Settings (для отправки email уведомлений)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=

# Debug
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Security
WEBHOOK_SECRET=generate_random_secret_here
ADMIN_SECRET_KEY=generate_random_admin_key_here

# CRM integration (optional)
ZOHO_TOKEN_ENDPOINT=https://accounts.zoho.com/oauth/v2/token
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MANAGER_EMAILS=manager1@company.com,manager2@company.com

# Business settings
LEAD_INACTIVITY_TIMEOUT=30
MAX_CONTEXT_MESSAGES=20
LLM_TIMEOUT=30

# Bot username
BOT_USERNAME=your_bot_username

# === AI COST CONTROL ===
# Monthly limits for AI usage
MONTHLY_TOKEN_LIMIT=1000000
MONTHLY_COST_LIMIT_USD=100.00
COST_ALERT_THRESHOLD=0.8
AUTO_DISABLE_ON_LIMIT=false

# Alert settings
COST_ALERT_ENABLED=true
WEEKLY_USAGE_REPORT=true

# === DEPLOYMENT SETTINGS ===
# Production server configuration (optional, for CI/CD)
PRODUCTION_SERVER=your-server.example.com
PRODUCTION_USER=root
PRODUCTION_PORT=22