# Основные
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/catalog_db
BOT_TOKEN=your_telegram_bot_token_here

# LLM
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# CRM
ZOHO_TOKEN_ENDPOINT=https://accounts.zoho.com/oauth/v2/token

# Уведомления
MANAGER_TELEGRAM_CHAT_ID=-100xxxxxxxxx
ADMIN_TELEGRAM_IDS=123456789,987654321

# Пути
CHROMA_PERSIST_DIR=/app/data/chroma
UPLOAD_DIR=/app/data/uploads

# Режим разработки
DEBUG=true
LOG_LEVEL=INFO

# Web
WEBHOOK_SECRET=your_webhook_secret_here
ADMIN_SECRET_KEY=your_admin_secret_key_here

# SMTP (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_smtp_password
MANAGER_EMAILS=manager1@company.com,manager2@company.com

# === НАСТРОЙКИ ПОИСКА ===
# Минимальный score для показа результатов (0.0-1.0)
SEARCH_MIN_SCORE=0.45
# Boost за совпадения в названии товара (0.0-0.5)
SEARCH_NAME_BOOST=0.2
# Boost за совпадения в артикуле товара (0.0-0.5, больше чем название)
SEARCH_ARTICLE_BOOST=0.3
# Максимальное количество результатов поиска
SEARCH_MAX_RESULTS=10